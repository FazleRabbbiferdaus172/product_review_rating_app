{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Run TS via ts-node",
        "runtimeArgs": ["-r", "ts-node/register"],
        "args": ["${workspaceFolder}/server/src/index.ts"],
        "cwd": "${workspaceFolder}/server",
        "internalConsoleOptions": "openOnSessionStart",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  